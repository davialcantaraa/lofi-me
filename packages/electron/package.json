	"dependencies": {
		"electron-store": "^8.0.1"
	},
	"devDependencies": {
		"electron": "^16.0.6"
	},
	"scripts": {
		"electron": "electron .",
		"electron-package-win": "npx electron-packager . lofi-me --out=dist --icon=assets/iconTemplate.ico --platform=win32 --arch=x64 --overwrite --ignore=main.js --prune",
		"electron-package-mac": "npx electron-packager . lofi-me --out=dist --icon=assets/iconTemplate.icns --platform=darwin --arch=x64 --overwrite --ignore=main.js --prune",
		"electron-package-linux": "npx electron-packager . lofi-me --out=dist --icon=assets/iconTemplate.png --platform=linux --arch=x64 --overwrite --ignore=main.js --prune"
	}
}
